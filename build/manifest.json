{
  "short_name": "WebBot",
  "author": "robertour",
  "name": "WebBot",
  "description": "WebBot",
  "manifest_version": 2,
  "version": "0.1.1",
  "permissions": [ "*://localhost/*", "tabs", "browsingData"],
  "icons": {
    "128": "images/bot.png"
  },
  "web_accessible_resources": [
    "images/bot.png",
    "data/*.txt"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {},
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },  

  "background": {
    "scripts": [

      "defined/settings.js",
      "dist/background.js"
    ],
    "persistent": true
  },


  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": [
             "dist/content.js"],
        "run_at": "document_end",
        "all_frames": false
    }]

}
