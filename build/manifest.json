{
  "short_name": "WebBot",
  "author": "robertour",
  "name": "WebBot",
  "description": "WebBot",
  "manifest_version": 2,
  "version": "4.1.4",
  "permissions": [ "<all_urls>", "tabs", "browsingData", "downloads"],
  "icons": {
    "128": "images/bot.png"
  },
  "web_accessible_resources": [
    "images/bot.png",
    "data/*.txt"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {},
  "options_ui": {
    "page": "index.html",
    "browser_style": true
  },  

  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ]

}
